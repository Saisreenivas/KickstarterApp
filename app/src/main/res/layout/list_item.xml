<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:weightSum="11"
    android:layout_marginTop="0dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="0dp"
        android:background="#000"
        android:id="@+id/item_dump_back"
        android:orientation="vertical">
        <LinearLayout
            android:paddingTop="56dp"
            android:id="@+id/item_layout"
            android:paddingBottom="42dp"
            android:elevation="2dp"
            android:paddingLeft="32dp"
            android:paddingRight="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/item_heading"
                    android:text="Robot Machine Project"
                    android:textSize="20sp"
                    android:textColor="@color/text_heading"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pleadge-$80000"
                    android:id="@+id/item_pledge"
                    android:textSize="16sp"
                    android:textColor="@color/text_content"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:id="@+id/item_backers"
                    android:textColor="@color/text_content"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:text="Backers-1500"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_content"
                    android:id="@+id/no_of_days_to_go"
                    android:layout_height="wrap_content"
                    android:text="No of Days to Go - 21"
                    android:textSize="16sp"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=">"
                android:textSize="25dp"
                android:textColor="#ed867e"
                android:layout_weight="1"
                android:layout_gravity="center_vertical|right"/>
        </LinearLayout>

    </LinearLayout>
