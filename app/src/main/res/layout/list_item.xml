<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="11"
    android:background="@drawable/bg_list"
    android:id="@+id/item_layout"
    android:padding="12dp"
    android:layout_marginTop="12dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_heading"
            android:text="Robot Machine Project"
            android:textSize="20sp"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pleadge-$80000"
            android:id="@+id/item_pledge"
            android:textSize="16sp"
            android:textColor="#fff"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_backers"
            android:textColor="#fff"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Backers-1500"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#fff"
            android:id="@+id/no_of_days_to_go"
            android:layout_height="wrap_content"
            android:text="No of Days to Go - 21"
            android:textSize="16sp"/>
    </LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="right|center_vertical"

        android:src="@drawable/img_right"/>
