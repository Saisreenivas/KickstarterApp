<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:weightSum="11"
    android:background="@drawable/bg_border_circle"
    android:id="@+id/item_layout"
    android:padding="16dp"
    android:elevation="4dp"
    android:layout_marginTop="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="10"
        android:orientation="vertical">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_heading"
            android:text="Robot Machine Project"
            android:textSize="20sp"
            android:textColor="#4e4e4e"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pleadge-$80000"
            android:id="@+id/item_pledge"
            android:textSize="16sp"
            android:textColor="#808080"
            />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/item_backers"
            android:textColor="#808080"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Backers-1500"/>
        <TextView
            android:layout_width="wrap_content"
            android:textColor="#808080"
            android:id="@+id/no_of_days_to_go"
            android:layout_height="wrap_content"
            android:text="No of Days to Go - 21"
            android:textSize="16sp"/>
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        android:textSize="25dp"
        android:textColor="#ed867e"
        android:layout_weight="1"
        android:layout_gravity="center_vertical|right"/>
